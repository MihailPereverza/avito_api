    "definitions": {
        "account.AddBalanceInput": {
            "type": "object",
            "properties": {
                "account_id": {
                    "type": "integer"
                },
                "amount": {
                    "type": "number"
                }
            }
        },
        "account.AddBalanceOutput": {
            "type": "object",
            "properties": {
                "account_id": {
                    "type": "integer"
                },
                "balance": {
                    "type": "number"
                }
            }
        },
        "account.ApproveDebitingOutput": {
            "type": "object",
            "properties": {
                "companyBalance": {
                    "type": "number"
                }
            }
        },
        "account.GetStatisticOutput": {
            "type": "object",
            "properties": {
                "createTime": {
                    "type": "string"
                },
                "operationID": {
                    "type": "integer"
                },
                "serviceDescription": {
                    "type": "string"
                },
                "serviceTitle": {
                    "type": "string"
                },
                "statusTitle": {
                    "type": "string"
                },
                "totalCost": {
                    "type": "number"
                }
            }
        },
        "account.ServiceAccountInput": {
            "type": "object",
            "properties": {
                "account_id": {
                    "type": "integer"
                },
                "operation_id": {
                    "type": "integer"
                },
                "service_id": {
                    "type": "integer"
                },
                "total_cost": {
                    "type": "number"
                }
            }
        },
        "account.TransferInfo": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "from_account_id": {
                    "type": "integer"
                },
                "to_account_id": {
                    "type": "integer"
                }
            }
        },
        "account.TransferOutput": {
            "type": "object",
            "properties": {
                "from_account": {
                    "$ref": "#/definitions/model.Account"
                },
                "to_account": {
                    "$ref": "#/definitions/model.Account"
                }
            }
        },
        "model.Account": {
            "type": "object",
            "properties": {
                "account_id": {
                    "type": "integer"
                },
                "balance": {
                    "type": "number"
                },
                "reserved_balance": {
                    "type": "number"
                }
            }
        },
        "outputModel.Error": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        }
    }
}