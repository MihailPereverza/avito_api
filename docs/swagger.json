    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/account/balance": {
            "post": {
                "description": "get balance",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "GetBalance",
                "operationId": "account-get-balance",
                "parameters": [
                    {
                        "description": "account_id",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "{\"account_id\": 1234}"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/account.ApproveDebitingOutput"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/account/balance/add": {
            "post": {
                "description": "add balance on account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "AddBalance",
                "operationId": "account-add-balance",
                "parameters": [
                    {
                        "description": "account_id and balance",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/account.AddBalanceInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/account.AddBalanceOutput"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/account/balance/reserve": {
            "post": {
                "description": "reserve balance from account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "ReserveBalance",
                "operationId": "account-reserve-balance",
                "parameters": [
                    {
                        "description": "account info",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/account.ServiceAccountInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.Account"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/account/balance/unreserve": {
            "post": {
                "description": "unreserve balance from account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "UnReserveBalance",
                "operationId": "account-unreserve-balance",
                "parameters": [
                    {
                        "description": "operation info",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/account.ServiceAccountInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/model.Account"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/account/transfer": {
            "post": {
                "description": "transfer money from \"from_account\" to \"to_account\"",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "Transfer",
                "operationId": "account-transfer",
                "parameters": [
                    {
                        "description": "transfer info",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/account.TransferInfo"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/account.TransferOutput"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/account/{account_id}/statistic": {
            "get": {
                "description": "get transaction statisctic",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "GetBalance",
                "operationId": "account-get-statistic",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "account_id",
                        "name": "account_id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/account.GetStatisticOutput"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/operation/approve": {
            "post": {
                "description": "approve-debiting",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "account"
                ],
                "summary": "ApproveDebiting",
                "operationId": "account-approve-debiting",
                "parameters": [
                    {
                        "description": "account_id and balance",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/account.ServiceAccountInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/account.ApproveDebitingOutput"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        },
        "/api/report/": {
            "post": {
                "description": "reserve balance from account",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "report"
                ],
                "summary": "GetReport",
                "operationId": "report-get-report",
                "responses": {
                    "200": {
                        "description": "reportURL",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/outputModel.Error"
                        }
                    }
                }
            }
        }
